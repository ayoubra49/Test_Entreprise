{% extends 'base.html.twig' %} 
{% block stylesheets %} 

{% endblock %}  
{% block content_body %} 
    {{ form_start(form) }} 
   <h3>Book details:</h3> 
   <div class="form-row">
    <div class="form-group col-md-6">
    {{ form_row(form.name) }}
    </div>
    <div class="form-group col-md-6"> 
        {{ form_row(form.numsiren) }}
    </div>
  
    <div class="form-group col-md-6"> 
        {{ form_row(form.villeimm) }}
    </div>
    <div class="form-group col-md-4"> 
    {{ form_row(form.date_imm, {value : "now"|date("m-d-Y")}) }}
    </div>
    <div class="form-group col-md-6"> 
        {{ form_row(form.capitale) }}
    </div>
</div>     
<div class="d-none">{{ form_row(form.date_creation) }}</div>

   {{ form_end(form) }} 
{% endblock %}    